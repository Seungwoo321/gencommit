{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": true,
    "access": "public",
    "publishArgs": ["--provenance"],
    "skipChecks": true
  },
  "hooks": {
    "before:init": ["npm run build"],
    "after:bump": ["npm run build"]
  }
}
